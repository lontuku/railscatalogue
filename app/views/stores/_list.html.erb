 <% @stores.each_with_index do |store, i| %>
      <tr>
      <th scope="row"> <%= i %> </th>
        <td><%= store.name %></td>
        <td><%= store.instagram_link %></td>
        <td><%= store.user.nick %></td>
        <td>
          <button class="btn-change-state btn-sm btn-info" data-id="<%= store.id %>">
          <%= store.suspended == 1 ? 'Aprobar' : 'Suspender' %>
          </button>
        </td>


        <%#= hidden_field_tag :authenticity_token, form_authenticity_token -%>
        <%#= link_to 'Comprar', store_path(store, name:"hola"), method: :patch, remote: true %>

        
        <td><%= link_to 'Mostrar', store %></td>
        <td><%= link_to 'Editar', edit_store_path(store) %> </td>
        <td><%= link_to 'Destruir', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        
      </tr>
    <% end %>

