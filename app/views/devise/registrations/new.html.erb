<div class="flex-row d-flex justify-content-center">
<div class="col-md-8">
<div class="card mt-5">
<div class="card-body">
<h2 class="display-4">Registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="form-group">
  <div class="field">
    <%= f.label :name, "Nombre" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
  </div>
</div>
<div class="form-group">
  <div class="field">
    <%= f.label :lastname, "Apellido"%><br />
    <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", class:"form-control"  %>
  </div>
</div>
<div class="form-group">
  <div class="field">
    <%= f.label :nick, "Nick" %><br />
    <%= f.text_field :nick, autofocus: true, autocomplete: "nick", class:"form-control"  %>
  </div>
</div>
<div class="form-group">
  <div class="field">
    <%= f.label :email, "Correo Electrónico" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"  %>
  </div>
</div>
<div class="form-group">
  <div class="field">
    <%= f.label :password, "Contraseña" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caractéres mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control"  %>
  </div>
  </div>
<div class="form-group">
  <div class="field">
    <%= f.label :Contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control"  %>
  </div>
</div>
<div class="form-group">
  <div class="actions">
    <%= f.submit "Registrarme", class:"form-control btn btn-outline-info"  %>
  </div>

<% end %>
  </div>
<div class="form-group">
<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
</div>